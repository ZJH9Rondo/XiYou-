/* pages/chat/chat.wxss */
.searchBackground{
   position: absolute;
    width: 100%;
    height: 100vh;
    margin: 0 auto;
    overflow: hidden;
    display:  block;
    background: linear-gradient(180deg, #fff, #ccc);
}

/**
*   搜索用户界面
*/
.chatPage{
    width: 100%;
    height: auto;
    min-height: 100vh;
    position: relative;
}
.chatlist{
    width: 100%;
    height: auto;
    display: block;
    margin-bottom: 150rpx; 
    position: absolute;
}
.chatItem{
    width: 100%;
    height: 150rpx;
    display: block;
    margin-bottom: 5rpx;
    box-shadow: 0 8rpx 8rpx #cccccc;
}
.userFront{
    width: 100rpx;
    height: 100rpx;
    display: block;
    margin-left: 25rpx;
    margin-top: 25rpx;
    float: left;
}
.userFront>image{
    width: 100%;
    height: 100%;
    overflow: hidden;
    background-repeat: no-repeat;
}
.chatContent{
    height: 100rpx;
    padding-top: 25rpx; 
    margin-left: 150rpx;
    display: block;
}
.contentTittle{
    width: 100%;
    height: 50rpx;
    display: block;
    color: #cccccc;
}
.contentText{
    width: 90%;
    height: 70rpx;
    display: block;
     overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap; 
    padding-top: 10rpx; 
    color: #2E3238;
}
.contentText,.contentTittle{
    font-size: 28rpx;
}
.clearFloat{
    clear: both;
    display: block;
}
.searchButton{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    position: absolute;
    left: 50%;
    margin-left: -50rpx;
    margin-top: 88vh; 
}
.searchIcon{
    width: 100%;
    height: 100%;
    overflow: hidden;
    background-repeat: no-repeat;
}