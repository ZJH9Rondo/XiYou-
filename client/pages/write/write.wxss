.write{
    width: 100%;
    height: 100vh;
    display: block;
}

/*
*   upload fail tips
**/
.release-tips{
    width:100%;
    height: 45rpx;
    background: #F0ECEC;
    display: block;
}
.release-tips-icon{
    width: 35rpx;
    height: 35rpx;
    margin: 5rpx;
    float: left;
}
.release-tips-icon>image{
    width: 100%;
    height: 100%;
    background-repeat: no-repeat;
}
.release-tips>text{
    font-size: 26rpx;
    color: #C92D2D;
    padding-left: 10rpx;
}
.close{
    float: right;
}
/*
*   edit container style
**/
.form-box{
    width: 95%;
    height: 550rpx;
    display: block;
    margin-left: auto;
    margin-right: auto;
    margin-top: 50rpx;
    border-bottom: 1rpx solid #cccccc;
}
.edit{
    width: 100%;
    height: 300rpx;
    display: block;
    font-size: 30rpx;
    line-height: 15rpx;
}
.uploadIMG{
    width: 130rpx;
    height: 130rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 20rpx;
    margin-top: 20rpx;
    overflow: hidden;
    border-radius: 10rpx;
    border: 1px dotted #cccccc;
}
.uploadIMG>image{
    width: 75%;
    height: 75%;
    background-repeat: no-repeat;
}
button{
    width: 90%;
    margin-top: 50rpx;
    background-color: #FA6570 !important;
    color: white !important;
}
/*
*   hole images display temp
**/
.holeIMG-list{
    width: 100%;
    height: 150rpx;
    display: block;
}
.holeIMG-item{
    width: 120rpx;
    height: 120rpx;
    margin-left: 20rpx;
    display: inline-block;
    border-radius: 5rpx;
}
.chooseIMG-tips{
    color: #FA6570;
    font-size: 24rpx;
    padding-top: 10rpx;
    padding-left: 20rpx;
    display: block;
}
/*
*   isanonymous style
**/
.write-about{
    width: 100%;
    height: 70rpx;
    display: block;
    margin-top: 20rpx;
}
.hole-location{
    width: auto;
    height: 70rpx;
    display: block;
    overflow: hidden;
    float: left;
    margin-left: 20rpx;
    color: #cccccc;
}
.where{
    margin-top: 10rpx;
    margin-left: 10rpx;
    display: inline-block;
    font-size: 30rpx;
}
.location{
    width: 40rpx;
    height: 50rpx;
    margin-top: 10rpx;
    display: block;
    float: left;
}
.location-icon{
    width: 40rpx;
    height: 50rpx;
    background-repeat: no-repeat;
}
.anonymous{
    width: auto;
    height: 70rpx;
    display: block;
    color: #FA6570;
    float: right;
}