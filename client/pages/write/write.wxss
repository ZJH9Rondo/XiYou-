.write{
    width: 100%;
    height: 100vh;
    display: block;
}
/*
*   edit container style
**/
.form-box{
    width: 95%;
    height: 500rpx;
    display: block;
    margin-left: auto;
    margin-right: auto;
    margin-top: 50rpx;
    border-bottom: 1rpx solid #cccccc;
}
.edit{
    width: 100%;
    height: 300rpx;
    display: block;
}
.uploadIMG{
    width: 150rpx;
    height: 150rpx;
    display: block;
    margin-left: 50rpx;
    margin-top: 20rpx;
    overflow: hidden;
    border-radius: 10rpx;
    border: 1px dotted #cccccc;
}
.uploadIMG>image{
    width: 100%;
    height: 100%;
    background-repeat: no-repeat;
}
button{
    width: 90%;
    margin-top: 50rpx;
    background-color: pink !important;
}