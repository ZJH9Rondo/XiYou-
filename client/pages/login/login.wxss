.login{
  display: block;
  width: 100%;
  height: 100%;
}

.header{
  display: flex;
  width: 100%;
}
.header>image{
  width: 100%;
}

.content{
  display: flex;
  width: 80%;
  margin-top: 150px;
  margin-left: 10%;
  flex-wrap: wrap;
  justify-content: center; 
}

.content-box{
  width: 100%;
  display: flex;
}

.content-box>input{
  width: 100%;
  height: 40px;
  padding: 0 0 0 5%;
  font-size: 16px;
  margin-top: 10px;
  color: #FA6570;
  vertical-align: bottom;
  border: solid 1px #DCDFE5;
}

.content-box>image{
  width: 25%;
  height: 42px;
  background-color: #666;
  margin-top: 10px;
  /* z-index: 999; */
}

.vercode{
  width: 75%!important;
}

.content>button{
  margin-top: 20px;
  width: 100%;
  color: white;
  background-color: #FA6570;
}
