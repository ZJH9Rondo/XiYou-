 Page{
  width: 100%;
  height: 100%;
} 

.login{
  display: block;
  width: 100%;
  height: 100%;
  background-color: #F2F2F2;
}

.content{
  display: flex;
  width: 80%;
  margin-left: 10%;
  flex-wrap: wrap;
  justify-content: center; 
}

.content>input{
  width: 100%;
  height: 40px;
  font-size: 20px;
  margin-top: 10px;
  text-align: center;
  vertical-align: bottom;
  border-bottom: solid 1px #AAAAAA;
}

.content>image{
  position: absolute;
  top: 107px;
  right: 10%;
  width: 80px;
  height: 40px;
  background-color: #666;
  z-index: 999;
}

.content>button{
  margin-top: 20px;
}