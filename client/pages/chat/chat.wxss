.chatPage{
    width: 100%;
    height: auto;
    max-height: 100vh;
    overflow: hidden;
}
/**
* 对话框样式
*/
.messageContainer{
    width: 100%;
    height: 92vh;
    display: block;
}
.messageItem{
    clear: both;
    width: 95%;
    height: auto;
    min-height: 150rpx;
    display: block;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    margin-left: auto;
    margin-right: auto;
    overflow: auto;
}
.receive,.send{
    display: block;
    width: 65%;
    height: auto;
    min-height: 100rpx;
}
.send{
    margin-left: 35%;
}
.userFront{
    display: block;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background: gold;
}
.receive>.userFront{
    float: left;
}
.send>.userFront{
    float: right;
}
.content{
    max-width: 60%;
    min-height: 100%;
    margin-top: 30rpx;
    position: relative;
    display: block;
    padding: 15rpx;
    border-radius: 15rpx;
}
.content>div{
    width: 20rpx;
    height: 20rpx;
    position: absolute;
    transform: rotateZ(45deg);
    -webkit-transform: rotateZ(45deg);
    -moz-transform: rotateZ(45deg);  
    -o-transform: rotateZ(45deg);
    background: #FFFEFF;
}
.content>pre{
    text-align: left;
    font-family: sans-serif;
    color: #2E2020;
    font-size: 29rpx;
    word-break: break-all;
}
.receive>.content{
    float: left;
    background: #EAEAEB;
    margin-left: 30rpx;
}
.receiveTip{
    background: #EAEAEB !important;
    margin-left: -22rpx;
}
.send>.content{
    margin-right: 30rpx;
    background: #68F84E;
    float: right;
}
.sendTip{
    left: 100%;
    margin-left: -10rpx;
    background: #68F84E !important;
}
/**
*   输入框样式
*/
.inputContainer{
    width: 100%;
    height: 8vh;
    display: block;
}
.messageInput{
    width: 80%;
    height: 8vh;
    float: left;
    display: block;
}
.messageInput>input{
    width: 95%;
    height: 7vh;
    top: 10rpx;
    margin-left: 20rpx;
    font-size: 32rpx;
    border: 0;
    border-bottom: 2rpx solid #cccccc;
}
.sendButton{
    width: 14%;
    height: 5vh;
    display: block;
    margin-left: 82%;
    top: 10rpx; 
    border: 2rpx solid #cccccc;
    border-radius: 4rpx;
    position: relative;
    overflow: hidden;
}
.sendButton>image{
    width: 80%;
    height: 80%;
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    margin: auto;
    background-repeat: no-repeat;
}