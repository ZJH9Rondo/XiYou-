/**index.wxss**/
.swiper{
    width: 100%;
    height: 450rpx;
}
.swiperIMG{
    width: 100%;
    height: 100%;
}
/**菜单列表**/
.chooseMenu{
    width: 100%;
    height: auto;
    min-height: 200rpx;
    display: flex;
    align-content: space-between;
}
.menuItem{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.item{
    width: 70%;
    height: 70%;
    display: block;
}
.itemIcon{
    width: 50%;
    height: 50%;
    display: block;
    margin-left: auto;
    margin-right: auto;
}
.itemTitle{
    display: block;
    color: #858585;
    font-size: 26rpx;
    margin-top: 5rpx;
    text-align: center;
}
/**动态列表**/
.newsBox{
    width: 100%;
    height: auto;
    display: block;
}
.newsTitle{
    width: 98%;
    height: auto;
    display: flex;
    align-items: center;
    font-size: 30rpx;
    margin-left: auto;
    margin-right: auto;
}
.newsTitleIcon{
    margin-right: 5rpx;
}
.newsItem{
    width: 97%;
    height: 250rpx;
    display: flex;
    margin-top: 20rpx;
    margin-left: auto;
    margin-right: auto;
    box-shadow: 0 10rpx 10rpx #cccccc;
}
/**列表类样式**/
.newsImage{
    flex: 0 0 38%;
    height: 100%;
}
.newsContent{
    flex: 0 0 62%;
    height: 100%;
    display: flex;
    flex-direction: column;
}
.newsUser{
    height: 25%;
    display: flex;
    align-items: center;
}
.userFront{
    width: 40rpx;
    height: 40rpx;
    border-radius: 5rpx;
    border: 1px solid gold;
    margin-left: 10rpx;
}
.userName{
    margin-left: 15rpx;
    font-size: 26rpx;
}
.newsDescription{
    height: 57%;
    color: #858585;
    padding: 25rpx 10rpx 0rpx 15rpx;
    text-indent: 50rpx;
    font-size: 24rpx;
    line-height: 30rpx;
    letter-spacing: 2rpx;
}
.description{
     /**多行文本省略**/
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
    overflow: hidden;
}
.newsAbout{
    height: 18%;
    font-size: 24rpx;
    display: flex;
    justify-content: flex-end;
}
.aboutIcon{
    width: 30rpx;
    height: 25rpx;
    margin-right: 5rpx;
}
.aboutCount{
    margin-right: 15rpx;
    color: #858585;
}
/**积分榜样式**/
.integralBox{
    width: 100%;
    height: 450rpx;
    margin-top: 30rpx;
}
.integralTitle{
    width: 100%;
    height: 50rpx;
    font-size: 30rpx;
    display: flex;
    align-items: center;
}
.integralIcon{
    width: 35rpx;
    height: 35rpx;
    margin-left: 10rpx;
    margin-right: 5rpx;
}
.integralShow{
    width: 100%;
    height: 400rpx;
    display: block;
}
.integralItem{
    width: 60%;
    height: 350rpx;
    display: block;
    margin-left: auto;
    margin-right: auto;
}
.integralUser{
    width: 200rpx;
    height: 200rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.integralUserFront{
    border-radius: 50%;
    display: block;
}
.championFront{
    width: 130rpx;
    height: 130rpx;
}
.championIcon{
    position: absolute;
    height: 50rpx;
    width: 50rpx;
    margin-top: -30rpx;
    margin-left: 70rpx;
    transform: rotate(30deg);
}
.unChampionFront{
    width: 100rpx;
    height: 100rpx;
}
.firstUser{
    margin-left: auto;
    margin-right: auto;
}
.secondUser{
    margin-top: -50rpx;
    float: left;
}
.thirdUser{
    margin-top: -50rpx;
    float: right;
}
.integralUserName{
    font-size: 30rpx;
    text-align: center;
    display: block;
    color: #858585;
    margin-top: 10rpx;
}
.integralTips{
    height: 50rpx;
    display: flex;
    align-items: center;
}
.integralTipsIcon{
    width: 26rpx;
    height: 26rpx;
    margin-left: 20rpx;
    animation: showIntegralTipsIcon 3s;
    animation-iteration-count: infinite;
    -webkit-animation: showIntegralTipsIcon 3s;
    -webkit-animation-iteration-count: infinite;
}
.integralTipsText{
    font-size: 22rpx;
    color: #1B8EF3;
    margin-left: 10rpx;
}
/**首页页脚**/
.footerText{
    color: #cccccc;
    font-size: 26rpx;
    text-align: center;
    display: block;
    margin-top: 20rpx;
}
/**积分榜动画**/
@keyframes showIntegralTipsIcon{
    0%     {transform: scale(1);}
    14.28% {transform: scale(1.3);}
    28.57% {transform: scale(0.72);}
    42.85% {transform: scale(1.1);}
    57.14% {transform: scale(0.92);}
    71.42% {transform: scale(1.03);}
    85.71% {transform: scale(0.99);}
    100%   {transform: scale(1);}  
}